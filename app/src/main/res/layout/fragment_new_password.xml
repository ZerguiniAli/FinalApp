<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".New_Password">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="25dp"
        android:fontFamily="@font/chesnagroteskmedium"
        android:text="Login help"
        android:textStyle="bold"
        android:textColor="@color/GreenC"
        android:textSize="25dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:id="@+id/center">
        <TextView
            android:id="@+id/find"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Enter your new password"
            android:textSize="23dp"
            android:textColor="@color/GreenC"
            android:fontFamily="@font/chesnagroteskmedium"
            />
        <EditText
            android:id="@+id/newpassword"
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/edittext"
            android:padding="10dp"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:fontFamily="@font/chesnagroteskmedium"
            android:hint="Password"
            android:textColorHint="@color/hintcolor"
            android:layout_below="@id/find"
            android:layout_marginTop="30dp"
            />

        <Button
            android:id="@+id/button"
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:layout_below="@id/newpassword"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:backgroundTint="@color/GreenC"
            android:fontFamily="@font/chesnagroteskmedium"
            android:text="Submit"
            android:textColor="@color/white"
            android:textSize="20dp"
            app:cornerRadius="8dp" />
    </RelativeLayout>

</RelativeLayout>