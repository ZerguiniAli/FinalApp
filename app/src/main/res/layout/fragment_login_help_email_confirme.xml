<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:id="@+id/loginhelpcomfirme"
    tools:context=".Login_help_email_confirme">

    <TextView
        android:layout_margin="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/chesnagroteskmedium"
        android:text="Login help"
        android:textStyle="bold"
        android:textColor="@color/GreenC"
        android:textSize="25dp"/>
    <RelativeLayout
        android:id="@+id/center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">
        <TextView
            android:id="@+id/find"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Enter the Code you received \nin your email"
            android:textSize="23dp"
            android:textColor="@color/GreenC"
            android:fontFamily="@font/chesnagroteskmedium"

            />
        <EditText
            android:id="@+id/c1"
            android:layout_width="45dp"
            android:layout_height="50dp"
            android:textColor="@color/white"
            android:layout_below="@id/find"
            android:layout_toLeftOf="@id/c2"
            android:layout_marginRight="20dp"
            android:background="@drawable/edittext"
            android:layout_marginTop="30dp"
            android:maxLength="1"
            android:inputType="number"
            android:gravity="center"
            android:nextFocusDown="@id/c2"/>
        <EditText
            android:id="@+id/c2"
            android:layout_width="45dp"
            android:layout_height="50dp"
            android:textColor="@color/white"
            android:layout_below="@id/find"
            android:background="@drawable/edittext"
            android:layout_toLeftOf="@id/c3"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:layout_marginTop="30dp"
            android:maxLength="1"
            android:inputType="number"
            android:nextFocusDown="@id/c3"
            />
        <EditText
            android:id="@+id/c3"
            android:layout_width="45dp"
            android:layout_height="50dp"
            android:textColor="@color/white"
            android:layout_below="@id/find"
            android:background="@drawable/edittext"
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true"
            android:maxLength="1"
            android:gravity="center"
            android:inputType="number"
            android:nextFocusDown="@id/c4"
            />
        <EditText
            android:id="@+id/c4"
            android:layout_width="45dp"
            android:layout_height="50dp"
            android:textColor="@color/white"
            android:layout_below="@id/find"
            android:background="@drawable/edittext"
            android:layout_toRightOf="@id/c3"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:maxLength="1"
            android:inputType="number"
            android:nextFocusDown="@id/c5"
            />
        <EditText
            android:id="@+id/c5"
            android:layout_width="45dp"
            android:layout_height="50dp"
            android:textColor="@color/white"
            android:layout_below="@id/find"
            android:gravity="center"
            android:background="@drawable/edittext"
            android:layout_toRightOf="@id/c4"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:maxLength="1"
            android:inputType="number"
            />

        <Button
            android:id="@+id/button"
            android:layout_width="350dp"
            android:layout_centerHorizontal="true"
            android:layout_height="60dp"
            android:layout_below="@id/c3"
            android:layout_marginTop="30dp"
            android:backgroundTint="@color/GreenC"
            android:fontFamily="@font/chesnagroteskmedium"
            android:text="Submit"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:gravity="center"
            app:cornerRadius="8dp" />

    </RelativeLayout>
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/center"
        android:layout_marginTop="40dp"
        android:indeterminateTint="@color/GreenC"
        android:visibility="invisible" />

</RelativeLayout>