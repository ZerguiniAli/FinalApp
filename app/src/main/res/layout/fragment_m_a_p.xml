<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".MAP">

    <fragment
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"/>
    <Button
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:text="DONE"
        android:fontFamily="@font/chesnagroteskmedium"
        android:backgroundTint="@color/GreenC"
        android:layout_marginTop="20dp"
        android:textColor="@color/background"
        android:textStyle="bold"
        android:layout_marginLeft="20dp"
        android:id="@+id/done" />
    <Button
        android:id="@+id/addpostion"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="ADD POSTION"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="70dp"
        android:layout_marginRight="20dp"
        android:backgroundTint="@color/GreenC"
        android:textColor="@color/background"
        />
    <Button
        android:id="@+id/removepostion"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="REMOVE POSTION"
        android:layout_alignBottom="@id/addpostion"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="20dp"
        android:backgroundTint="#FF0000"
        android:textColor="@color/background"
        />
    <LinearLayout
        android:visibility="invisible"
        android:id="@+id/linear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:padding="30dp"
        android:gravity="center"
        android:orientation="vertical"
        android:background="@drawable/backgroundcards">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Give this field a name"
            android:textColor="@color/GreenC"
            android:textSize="20dp"
            android:layout_gravity="center"
            android:fontFamily="@font/chesnagroteskmedium"/>

        <EditText
            android:id="@+id/fieldname"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/edittext"
            android:layout_marginTop="20dp"
            android:hint="name"
            android:padding="10dp"
            android:textColorHint="@color/hintcolor"
            android:textColor="@color/white"
            android:fontFamily="@font/chesnagroteskmedium"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/GreenC"
            android:textColor="@color/white"
            android:text="Save"
            android:textSize="20dp"
            android:fontFamily="@font/chesnagroteskmedium"
            android:id="@+id/save"
            />
    </LinearLayout>


</RelativeLayout>