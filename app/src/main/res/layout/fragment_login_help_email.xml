<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"

    android:id="@+id/loginhelp"
    tools:context=".Login_help_email">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/chesnagroteskmedium"
        android:text="Login help"
        android:textStyle="bold"
        android:textColor="@color/GreenC"
        android:layout_margin="25dp"
        android:textSize="25dp"/>
    <RelativeLayout
        android:id="@+id/center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center">
        <TextView
            android:id="@+id/find"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Find your account"
            android:textSize="23dp"
            android:textColor="@color/GreenC"
            android:fontFamily="@font/chesnagroteskmedium"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/find"
            android:textSize="18dp"
            android:textColor="@color/GreenC"
            android:layout_marginTop="10dp"
            android:text="Enter your email address\nlinked to your aacount"
            android:gravity="center"/>
        <EditText
            android:id="@+id/email"
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/edittext"
            android:padding="10dp"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:fontFamily="@font/chesnagroteskmedium"
            android:hint="Email"
            android:textColorHint="@color/hintcolor"
            android:layout_below="@id/text"
            android:layout_marginTop="20dp"
            />

        <Button
            android:id="@+id/button"
            android:layout_width="350dp"
            android:layout_centerHorizontal="true"
            android:layout_height="60dp"
            android:layout_below="@id/email"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/GreenC"
            android:fontFamily="@font/chesnagroteskmedium"
            android:text="Next"
            android:textColor="@color/white"
            android:textSize="20dp"
            app:cornerRadius="8dp" />
    </RelativeLayout>
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/center"
        android:layout_marginTop="40dp"
        android:indeterminateTint="@color/GreenC"
        android:visibility="invisible" />

</RelativeLayout>